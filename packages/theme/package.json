{
  "name": "@klopvaart/theme",
  "type": "module",
  "scripts": {
    "build": "wp-scripts build --experimental-modules --config=webpack.config.ts --blocks-manifest",
    "start": "wp-scripts start --experimental-modules --config=webpack.config.ts --blocks-manifest",
    "make-pot": "wp i18n make-pot . languages/theme.pot --domain=klopvaart --exclude=node_modules",
    "make-json": "wp i18n make-json languages ../../web/wp-content/languages/themes --no-purge"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.0.0",
    "@types/webpack": "^5.28.5",
    "@types/wordpress__block-editor": "^11.5.16",
    "@wordpress/block-editor": "^14.20.0",
    "@wordpress/hooks": "^4.25.0",
    "@wordpress/icons": "^10.25.0",
    "@wordpress/interactivity": "^6.25.0",
    "@wordpress/plugins": "^7.25.0",
    "@wordpress/scripts": "^30.18.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "delicious-hamburgers": "^1.2.3"
  },
  "postcss": {
    "plugins": {
      "@tailwindcss/postcss": {}
    }
  }
}
