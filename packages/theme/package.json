{
  "name": "@klopvaart/theme",
  "type": "module",
  "scripts": {
    "build": "wp-scripts build --experimental-modules --config=webpack.config.ts --blocks-manifest",
    "start": "wp-scripts start --experimental-modules --config=webpack.config.ts --blocks-manifest",
    "make-pot": "wp i18n make-pot . languages/theme.pot --domain=klopvaart --exclude=node_modules",
    "make-json": "wp i18n make-json languages ../../web/wp-content/languages/themes --no-purge"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.9.1",
    "@types/webpack": "^5.28.5",
    "@types/wordpress__block-editor": "^14.21.0",
    "@wordpress/block-editor": "^15.6.0",
    "@wordpress/hooks": "^4.33.0",
    "@wordpress/icons": "^11.0.0",
    "@wordpress/interactivity": "^6.33.0",
    "@wordpress/plugins": "^7.33.0",
    "@wordpress/scripts": "^30.26.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "delicious-hamburgers": "^1.2.3"
  },
  "postcss": {
    "plugins": {
      "@tailwindcss/postcss": {}
    }
  }
