{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2023", "dom"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "types": ["node"],
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["packages/theme/src/@types", "./node_modules/@types"]
  },
  "include": ["packages/theme/src/**/*"],
  "exclude": ["packages/theme/build"]
}
